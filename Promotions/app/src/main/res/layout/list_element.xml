<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@drawable/borde">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="horizontal"
        android:padding="6dp">
        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="190dp"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:srcCompat="@drawable/todo3">


        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="204dp"
            android:layout_height="124dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:srcCompat="@drawable/oferta1">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="164dp"
            android:layout_height="30dp"

            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="87dp"
            android:layout_toRightOf="@id/iconImageView"
            android:background="@drawable/ovalo"
            android:padding="6dp">


            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="143dp"
                android:layout_height="30dp"
                android:layout_marginBottom="116dp"
                android:background="#00FEE9CC"
                android:fontFamily="sans-serif"
                android:text="Kit de Skin Care"
                android:textAlignment="center"
                android:textColor="#FF7F00"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="53dp"
            android:text="@string/gaseosa"
            android:textColor="#050505"
            android:textSize="9dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="153dp"
            android:layout_marginEnd="146dp"
            android:background="@drawable/punto2"
            android:rotation="90" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="79dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:text="@string/eletra"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="135dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="20dp"
            android:text="@string/jahora"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="9dp"
            android:text="@string/tienda3"
            android:textSize="8sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tienda" />


    </RelativeLayout>

</LinearLayout>